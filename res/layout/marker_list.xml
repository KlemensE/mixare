<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ListItemStyle"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:clickable="false"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/markerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:clickable="false"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/markerDist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/markerTitle"
        android:layout_below="@+id/markerTitle"
        android:clickable="false"
        android:text="" />
    
    <ImageButton
        android:id="@+id/centerMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/markerTitle"
        android:layout_marginRight="14dp"
        android:padding="1dp"
        android:src="@android:drawable/ic_menu_mapmode" />

    <ImageButton
        android:id="@+id/showWebView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/centerMap"
        android:layout_toLeftOf="@+id/centerMap"
        android:padding="1dp"
        android:src="@android:drawable/ic_menu_view"
        android:visibility="gone" />

</RelativeLayout>